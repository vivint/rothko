#!/usr/bin/env bash

set -e

if [ ! -z "$ROTH_USAGE" ]; then
	echo "runs a live server that rebuilds on elm or go code changes"
	exit 0
fi

SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "${SCRIPTDIR}/.."
cd "$(pwd -P)"

IMPORT=github.com/zeebo/live
LIVE=$(vgo list -f '{{ .Target }}' "${IMPORT}")
go install -v $IMPORT

"$LIVE" \
	-run=roth-run \
	-build=roth-build
